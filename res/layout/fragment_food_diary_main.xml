<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fightingpit.foodtracker.FoodDiaryMainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView android:layout_width="match_parent" android:layout_height="400dp"
            android:id="@+id/tv_frag_food_diary_main"
            android:text="Food Diary View"
            android:layout_gravity="top"
            android:gravity="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Activity"
            android:id="@+id/bt_addMeal"
            android:layout_gravity="bottom|center"
            />
    </LinearLayout>

    </RelativeLayout>

</FrameLayout>
